#ifndef _GENERIC_SCENE_GRAPH_CONFIG_H_
#define _GENERIC_SCENE_GRAPH_CONFIG_H_


///////////////////////////////////////////////////////////////////////////////
//
//  Should we ignore these Visual C++ warnings?
//
///////////////////////////////////////////////////////////////////////////////

#cmakedefine GSG_IGNORE_VCPP_WARNING_4251
#cmakedefine GSG_IGNORE_VCPP_WARNING_4275


///////////////////////////////////////////////////////////////////////////////
//
//  Possibly disable warning about dll interfaces.
//  This is the hammer, but is there a better way?
//
///////////////////////////////////////////////////////////////////////////////

#ifdef _WIN32
# ifdef GSG_IGNORE_VCPP_WARNING_4251
#  pragma warning ( disable : 4251 )
# endif
# ifdef GSG_IGNORE_VCPP_WARNING_4275
#  pragma warning ( disable : 4275 )
# endif
#endif


///////////////////////////////////////////////////////////////////////////////
//
//  We want explicit smart-pointer construction.
//
///////////////////////////////////////////////////////////////////////////////

#define USUL_USE_EXPLICIT_SMART_POINTER_CONSTRUCTOR


#endif // _GENERIC_SCENE_GRAPH_CONFIG_H_
